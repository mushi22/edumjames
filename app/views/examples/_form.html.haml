= form_for ([@subtopic,@example]) do |f|
  - if @example.errors.any?
    #error_explanation
      %h2= "#{pluralize(@example.errors.count, "error")} prohibited this example from being saved:"
      %ul
        - @example.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :video_link
    = f.text_field :video_link
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
