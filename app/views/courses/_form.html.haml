= form_for @course do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :university
    = f.text_field :university     
  .field
    = f.label :description
    = render 'layouts/textbar'
    = f.text_area :description, :id => 'wysihtml5-textarea', :class => 'input_area'
  .actions
    = f.submit 'Save'
